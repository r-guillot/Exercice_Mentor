<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.controller.MainActivity"
    android:background="@drawable/gradient"
    android:padding="17dp"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fbwhite"
        android:layout_marginTop="75dp"
        />

    <EditText
        android:id="@+id/blank_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:gravity="left"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:textColorHint="#808080"
        android:background="#FFFFFF"
        android:padding="6dp"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/blank_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:gravity="left"
        android:layout_centerVertical="true"
        android:layout_below="@+id/blank_email"
        android:layout_marginTop="13dp"
        android:background="#FFFFFF"
        android:padding="6dp"
        android:layout_centerHorizontal="true"
        android:textColorHint="#808080"
        android:textAllCaps="false"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Log In"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/blank_password"
        android:layout_marginTop="13dp"
        android:padding="3dp"
        android:background="#29487D"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|bottom"
        android:layout_below="@+id/login_button"
        android:weightSum="15"
        >

    <TextView
        android:id="@+id/sign_up_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:text="Sign Up for Facebook"
        android:layout_weight="1"
        android:layout_gravity="bottom|center"

        />

    <Button
        android:id="@+id/button_inter"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#29487D"
        android:textColor="#FFFFFF"
        android:text="?"
        android:layout_weight="0"
        android:layout_gravity="center|bottom"

        />
    </LinearLayout>

</RelativeLayout>